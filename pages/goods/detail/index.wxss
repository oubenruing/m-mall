.swiper-box {
    width: 100%;
    height: 320px;
}

.swiper-box .slide-image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.shopping-container {
    padding: 0 30rpx;
}

.shopping-container .name {
    margin: 10px 0;
    font-weight: bold;
    color: #333;
}

.shopping-container .price {
    margin: 10px 0;
    font-weight: normal;
    color: orangered;
}

.shopping-container .remark {
    margin: 10px 0;
    color: #939393;
    line-height: 22px;
}

.swiper-container {
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}

.swiper-pager {
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0,0,0,.3);
    color: #fff;
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    line-height: 40px;
    font-size: 12px;
}

.quantity-wrapper {
  margin: 10px 0;
  top: 0;
  right: 0;
  width: 55%;
  height: 50%;
  background-color: #fff
}

.quantity-wrapper .customize-qua {
	width: 84px;
  height: 24px;
  box-sizing: border-box;
}

.quantity-decrease, 
.quantity-increase,
.quantity {
	display: inline-block;
    position: relative;
    width: 25px;
    height: 100%;
    border: 1px solid transparent;
	border-radius: 4px;
	border-color: #ccc;
	box-sizing: border-box;
}

.quantity {
	-webkit-appearance: none;
    text-align: center;
    width: 34px;
    vertical-align: top;
    font-size: 14px;
    line-height: 24px;
    color: #232326;
    min-height: 0;
}

.quantity-decrease {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    margin-left: 0;
}

.quantity-decrease:before,
.quantity-increase:before {
	content: "";
  position: absolute;
	top: 11px;
	left: 6px;
	width: 12px;
	height: 1px;
	background-color: #ccc;
}

.quantity-increase {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    margin-left: -1px;
}

.quantity-increase:after {
	content: "";
  position: absolute;
	top: 6px;
	left: 11px;
	width: 1px;
	height: 12px;
	background-color: #ccc;
}

.quantity {
	border-radius: 0;
	margin-left: -1px;
}